<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9392F3"
    android:id="@+id/main"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icons8_left_arrow_48"
            android:contentDescription="Back" />

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/button_color"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/white"
            android:layout_marginBottom="16dp"
            android:clipToOutline="true"
            android:backgroundTintMode="src_in">

            <!-- Name and Phone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icons8_male_user_45"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/tvFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sameer"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9923xxxxx9"
                        android:textSize="14sp"
                        android:textColor="#555" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/profile_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icons8_forward_30"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <!-- Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icons8_star_30"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.54  My Rating"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/rating_arrow"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icons8_forward_30"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Info Cards -->
        <!-- Phone -->
        <LinearLayout
            style="@style/InfoCardStyle">

            <ImageView
                android:id="@+id/phone_edit_arrow"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/icons8_call_30"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Phone Number"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:layout_height="19dp"
                    android:layout_width="116dp"/>

                <TextView
                    android:id="@+id/tvPhoneDetail"
                    android:textColor="#FFFFFF"
                    android:text="Required"
                    android:textSize="13sp"
                    android:layout_height="19dp"
                    android:layout_width="116dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Black Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Email -->
        <LinearLayout
            style="@style/InfoCardStyle">

            <ImageView
                android:id="@+id/email_edit_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons8_email_30"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="19dp"
                    android:layout_width="116dp"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_height="19dp"
                    android:layout_width="116dp"
                    android:text="Required"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Gender -->
        <LinearLayout
            style="@style/InfoCardStyle">

            <ImageView
                android:id="@+id/gender_edit_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/icons8_gender_30"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="19dp"
                    android:layout_width="116dp"
                    android:text="Gender"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_height="19dp"
                    android:layout_width="116dp"
                    android:text="Required"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- DOB -->
        <LinearLayout
            style="@style/InfoCardStyle"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/dob_edit_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icons8_date_30"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_height="19dp"
                    android:layout_width="116dp"
                    android:text="Date of Birth"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDOB"
                    android:layout_height="19dp"
                    android:layout_width="116dp"
                    android:text="Required"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>
