<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9392F3"
    tools:context=".SearchRide"
    android:id="@+id/main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/searchButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#9392F3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available Rides"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="center" />

            <!-- Ride Card 1 -->
            <LinearLayout
                android:id="@+id/rideCard1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/rideTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rideRoute1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kothrud - Viman Nagar"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ridePrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 230"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Ride Card 2 -->
            <LinearLayout
                android:id="@+id/rideCard2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/rideTime2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rideRoute2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kothrud - Viman Nagar"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ridePrice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 250"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <!-- Ride Card 3 -->
            <LinearLayout
                android:id="@+id/rideCard3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/rideTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/rideRoute3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kothrud - Viman Nagar"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ridePrice3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹ 352"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="210dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/green"
        android:text="Search Again"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
